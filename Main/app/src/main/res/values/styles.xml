<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="PlayerStyle">
        <item name="auto_show">false</item>
        <item name="controller_layout_id">@layout/view_control</item>
        <item name="default_artwork">@drawable/radio</item>
        <item name="keep_content_on_player_reset">true</item>
        <item name="resize_mode">fill</item>
        <item name="show_buffering">never</item>
        <item name="use_artwork">true</item>
    </style>

    <style name="KeyStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#CCFFFFFF</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
